<h1>Create a New EZAbout Place</h1>
<br>
<%= form_tag "/places", method: :post do %>
  <div>
    <%= label_tag :type_of_access, "Type of Access: " %>
    <%= select_tag :type_of_access, options_for_select([
                                              "Choose Type",
                                              "Entrance",
                                              "Bathroom",
                                              "Parking",
                                              "Other"],
                                              @place.type_of_access) %>
  </div>
  <br>
  
  <div>
    <%= label_tag :latitude, "Latitude: " %>
    <%= text_field_tag :latitude %>
  </div>
  <br>
  <div>
    <%= label_tag :longitude, "Longitude: " %>
    <%= text_field_tag :longitude %>
  </div>
  <br>
  <div>
    <%= label_tag :name, "Name: " %>
    <%= text_field_tag :name %>
  </div>
  <br>
  <div>
    <%= label_tag :description, "Description: " %>
    <%= text_field_tag :description %>
  </div>
  <br>
  <div>
    <%= label_tag :street_address, "Street Address: " %>
    <%= text_field_tag :street_address %>
  </div>
  <br>
  <div>
    <%= label_tag :city, "City: " %>
    <%= text_field_tag :city %>
  </div>
  <br>
  <div>
    <%= label_tag :state, "State: " %>
    <%= text_field_tag :state %>
  </div>
  <br>
  <div>
    <%= label_tag :note, "Note: " %>
    <%= text_field_tag :note %>
  </div>
  <br>
  <div>
    <%= submit_tag "Submit", class: "btn btn-danger" %>
  </div>
<% end %>
</div>