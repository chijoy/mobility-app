<h1>Sign Up for EZabout</h1>

<%= form_tag '/users', method: :post do %>
  <div>
    <%= label_tag :email %>
    <%= text_field_tag :email %>
  </div>
  <div>
    <%= label_tag :password %>
    <%= password_field_tag :password %>
  </div>
  <div>
    <%= label_tag :password_confirmation %>
    <%= password_field_tag :password_confirmation %>
  </div>
  <br>
  <%= submit_tag "Submit your Info" %>
<% end %>